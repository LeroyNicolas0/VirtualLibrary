<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>RestrictionFilter</filter-name>
        <filter-class>BibliotecaireFilters.RestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionFilter</filter-name>
        <url-pattern>/Bibliotecaire/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Inscription</servlet-name>
        <servlet-class>Servlets.Inscription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>Servlets.Connexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deconnexion</servlet-name>
        <servlet-class>Servlets.Deconnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutParticipant</servlet-name>
        <servlet-class>Servlets.AjoutParticipant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutLivre</servlet-name>
        <servlet-class>Servlets.AjoutLivre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutMotCle</servlet-name>
        <servlet-class>Servlets.AjoutMotCle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListeMotCle</servlet-name>
        <servlet-class>Servlets.ListeMotCle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inscription</servlet-name>
        <url-pattern>/Inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/Connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deconnexion</servlet-name>
        <url-pattern>/Deconnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutParticipant</servlet-name>
        <url-pattern>/Bibliotecaire/AjoutParticipant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutLivre</servlet-name>
        <url-pattern>/Bibliotecaire/AjoutLivre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutMotCle</servlet-name>
        <url-pattern>/Bibliotecaire/AjoutMotCle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeMotCle</servlet-name>
        <url-pattern>/Bibliotecaire/ListeMotCle</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
